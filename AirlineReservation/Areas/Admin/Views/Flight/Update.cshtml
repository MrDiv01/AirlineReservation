@using AirlineReservation.Models;
@model Flight
@{
    ViewData["Title"] = "Update";
}
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</head>
<div class="container">

    <form method="post" asp-action="Update" enctype="multipart/form-data">
        <div style="display:flex;flex-direction:column">
            <label asp-for="FAirportName">From City Name</label>
            <select style="margin-bottom:20px" asp-for="FromAirport" id="select1" class="form-select" aria-label="Default select example">
                <option selected>Open this select menu</option>
            </select>
            <div class="form-group">
                <label asp-for="FAirportName">From Airport Name</label>
                <input asp-for="FAirportName" class="form-control" placeholder="From Airport Name">
            </div>
            <label asp-for="TAirportName">To City Name</label>
            <select asp-for="ToAirport" id="select2" class="form-select" aria -label="Default select example">
                <option selected>Open this select menu</option>
            </select>
            <div class="form-group">
                <label asp-for="TAirportName">To Airport Name</label>
                <input asp-for="TAirportName" class="form-control" placeholder="From Airport Name">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DepartureTime">Departure Time</label>
            <input asp-for="DepartureTime" type="datetime-local" class="form-control" placeholder="Enter DepartureTime">
        </div>
        <div class="form-group">
            <label asp-for="AriveTime">Arive Time</label>
            <input asp-for="AriveTime" type="datetime-local" class="form-control" placeholder="Enter AriveTime">
        </div>
        <div class="form-group">
            <label asp-for="FlightDay">Flight Day</label>
            <input asp-for="FlightDay" type="date" class="form-control" placeholder="Enter FlightDay">
        </div>

        <div class="form-group">
            <label asp-for="Count">Email Count</label>
            <input asp-for="Count" type="number" class="form-control" placeholder="Enter count">
        </div>
        <div class="form-group">
            <label asp-for="ImageFile">Images</label>
            <input asp-for="ImageFile" class="form-control" placeholder="Image">
        </div>
        <span asp-validation-for="ImageFile" class="text-danger"></span>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<script>
    const cityName = 'Berlin';
    fetch(`https://restcountries.com/v3.1/all`)
        .then(response => {
            return response.json();
        })
        .then(data => {
            data.forEach(element => {
                console.log(element.capital)
                const markup = `<option>${element.capital}</option>`
                document.getElementById('select1').insertAdjacentHTML('beforeend', markup)
                document.getElementById('select2').insertAdjacentHTML('beforeend', markup)

            });
        })
</script>