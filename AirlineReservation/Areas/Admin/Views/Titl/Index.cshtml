@using AirlineReservation.Models;
@model List<Titile>
@{
    ViewData["Title"] = "Index";
}

<button>
    <a asp-action="Create" asp-controller="Titl">Create</a>
</button>
<div class="table-responsive">
    <table class="table table-bordered table-hover table-condensed mb-4">
        <thead>
            <tr>
                <th>Centence</th>
                <th>Images</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Titile titile in Model)
            {
                <tr>
                    <td>@titile.Name</td>
                    <td><img style="width:100px;height:100px" src="~/uploads/HomeSection2/@titile.Images" /></td>
                    <td class="text-center">
                        <ul class="table-controls">
                            <li style="list-style-type:none"><a asp-action="Update" asp-route-Id="@titile.Id" data-toggle="tooltip" data-placement="top" title="Edit"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path></svg></a></li>
                            <li style="list-style-type:none"><a asp-action="Delete" asp-route-Id="@titile.Id" data-toggle="tooltip" data-placement="top" title="Delete"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash-2"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg></a></li>
                        </ul>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

