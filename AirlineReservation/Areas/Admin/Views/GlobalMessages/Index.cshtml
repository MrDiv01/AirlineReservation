@using AirlineReservation.Models;
@model List<Messages>;
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<a asp-action="SendGlobal"><button type="button" class="btn btn-primary"> Create </button></a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Messages</th>
            <th scope="col">Time</th>
            <th scope="col">Delete</th>

        </tr>
    </thead>
    <tbody>
        @foreach (Messages messages in Model)
        {
            count++;
            <tr>
                <th scope="row">@count</th>
                <td>@messages.Mesage</td>
                <td>@messages.SendTime</td>
                <td style="padding-right:7%" class="text-center">
                    <ul class="table-controls">
                        <li style="list-style-type:none;"><a asp-action="Delete" asp-route-Id="@messages.Id" data-toggle="tooltip" data-placement="top" title="Delete"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash-2"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg></a></li>
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $('.widget-content .warning.confirm').on('click', function () {
        swal({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            type: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Delete',
            padding: '2em'
        }).then(function (result) {
            if (result.value) {
                swal(
                    'Deleted!',
                    'Your file has been deleted.',
                    'success'
                )
            }
        })
    })
</script>