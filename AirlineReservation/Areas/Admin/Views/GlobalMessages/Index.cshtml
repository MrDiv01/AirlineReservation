@using AirlineReservation.Models;
@model List<Messages>;
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<a asp-action="SendGlobal"><button type="button" class="btn btn-primary"> Create </button></a>
    <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Messages</th>
      <th scope="col">Time</th>
      <th scope="col">Delete</th>
          
  </tr>
  </thead>
        <tbody>
@foreach(Messages messages in Model)
{
        count++;
    <tr>
      <th scope="row">@count</th>
      <td>@messages.Mesage</td>
      <td>@messages.SendTime</td>
                      <td class="text-center">
                    <ul class="table-controls">
                        <button class="mr-2 btn btn-primary  warning confirm">Confirm</button>
                    </ul>
                </td>
    </tr>
}
  </tbody>
</table>
<script>
    $('.widget-content .warning.confirm').on('click', function () {
        swal({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            type: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Delete',
            padding: '2em'
        }).then(function (result) {
            if (result.value) {
                swal(
                    'Deleted!',
                    'Your file has been deleted.',
                    'success'
                )
            }
        })
    })
</script>