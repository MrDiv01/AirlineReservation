@using AirlineReservation.Models;
@using AirlineReservation.ViewModels;
@model DestinationViewModel
@{
    ViewData["Title"] = "Index";
}
@foreach (TicketImages item in ViewBag.TicketImg)
{
    <header id="gtco-header" class="gtco-cover gtco-cover-sm" role="banner" style="background-image: url(../../uploads/FlightImg/@item.ImgName)">
        <div class="gtco-container">
            <div class="row">
                <div class="col-md-12 col-md-offset-0 text-center">
                    <div class="row row-mt-15em">

                        <div class="col-md-12 mt-text animate-box" data-animate-effect="fadeInUp">
                            <h1>@item.FAirportName - @item.TAirportName</h1>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </header>
}

<div class="gtco-section">
    <div class="gtco-container">
        <div class="row">

            @foreach (var flight in Model.flightsı)
            {
                DateTime dateTime2 = flight.DepartureTime;
                TimeOnly timeOnly = TimeOnly.FromDateTime(dateTime2);
                DateTime dateTime3 = flight.AriveTime;
                TimeOnly timeOnly1 = TimeOnly.FromDateTime(dateTime3);
                DateTime dateTime = flight.FlightDay;
                DateOnly dateOnly = DateOnly.FromDateTime(dateTime);
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <a asp-route-flightId="@flight.Id" asp-action="index" asp-controller="Ticket" class="fh5co-card-item ">
                        <div class="fh5co-text">
                            <h2>@flight.FromAirport (@flight.FAirportName)</h2>
                            <span>to</span>
                            <h2>@flight.ToAirport (@flight.TAirportName)</h2>
                            <span>Flight Day</span>
                            <p>@dateOnly</p>
                            <span>Departure Time</span>
                            <p>@timeOnly</p>
                            <span>Arive Time</span>
                            <p>@timeOnly1</p>
                            <p><span class="btn btn-primary">Schedule a Trip</span></p>
                        </div>
                    </a>
                </div>
            }

        </div>
    </div>
</div>
<div id="gtco-subscribe">
    <div class="gtco-container">
        <div class="row animate-box">
            <div class="col-md-8 col-md-offset-2 text-center gtco-heading">
                <h2>Subscribe</h2>
                <p>Be the first to know about the new templates.</p>
            </div>
        </div>
        <div class="row animate-box">
            <div class="col-md-8 col-md-offset-2">
                <form class="form-inline">
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label for="email" class="sr-only">Email</label>
                            <input type="email" class="form-control" id="email" placeholder="Your Email">
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <button type="submit" class="btn btn-default btn-block">Subscribe</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

